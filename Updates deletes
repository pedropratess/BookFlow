-- Atualizar telefone de um usuário
UPDATE usuario SET telefone = '99999-9999' WHERE id_usuario = 1;

-- Atualizar status de empréstimo
UPDATE emprestimo SET status = 'Finalizado' WHERE id_emprestimo = 1;

-- Atualizar gênero de um livro
UPDATE livro SET genero = 'Ficção' WHERE isbn = '001-A';

-- DELETE SEGUROS COM CASCADE
DELETE FROM emprestimo WHERE id_emprestimo = 2;

DELETE FROM usuario WHERE id_usuario = 3;

DELETE FROM livro WHERE isbn = '002-A';
